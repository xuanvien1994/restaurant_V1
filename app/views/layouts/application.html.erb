<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	  <nav class="navbar navbar-light bg-faded">
	  <a class="navbar-brand" href="#">Navbar</a>
	  <ul class="nav navbar-nav">
	    <li class="nav-item <%= 'active' if current_page?(root_path) %>">
	      <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
	    </li>
	    <li class="nav-item <%= 'active' if current_page?(menu_path) %>" >
	    	<%= link_to "Menu", menu_path, class: 'nav-link' %>
	    </li>
	    <li class="nav-item <%= 'active' if current_page?(contact_us_path) %>">
	    	<%= link_to "Contact Us", contact_us_path, class: 'nav-link' %>
	    </li>
	  </ul>

	  <form class="form-inline pull-xs-right">
    
    <%= form_tag(menu_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Posts",  class: 'form-control' %>
      <%= submit_tag "Search", class: 'btn btn-success-outline' %>
      <% end %>
  </form>

	  <!-- <form class="form-inline pull-xs-right">
	    <input class="form-control" type="text" placeholder="Search">
	    <button class="btn btn-success-outline" type="submit">Search</button>
	  </form> -->
	</nav>
	<div class="container"</div>
  <body>
    <%= yield %>
  </body>
</html>
